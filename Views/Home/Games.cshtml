@{
    ViewData["Title"] = "Games";
}
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="container mt-4">
    <p>Dive into our fun and interactive games to practice and improve your sign language skills. Choose from a variety of games designed to make learning enjoyable!</p>

    <div class="row">
        <!-- Memory Match Game -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="~/images/memory-match.png" class="card-img-top" alt="Memory Match Game" />
                <div class="card-body">
                    <h5 class="card-title">Memory Match</h5>
                    <p class="card-text">Test your memory and sign language skills by matching pairs of signs. This game helps reinforce your knowledge through repetition.</p>
                    <a asp-area="" asp-controller="Games" asp-action="MemoryMatch" class="btn btn-primary">Play Memory Match</a>
                </div>
            </div>
        </div>
    </div>
</div>